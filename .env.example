APP_NAME="Portal Mendieta"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://portal_mendieta.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=UTC

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ----------------------------
# LOGS
# ----------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ----------------------------
# DATABASE
# ----------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# ----------------------------
# SESSION
# ----------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=30
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false

# ----------------------------
# CACHE / QUEUE / FILES
# ----------------------------
CACHE_STORE=database
QUEUE_CONNECTION=sync
FILESYSTEM_DISK=local

# ----------------------------
# REDIS (opcional)
# ----------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----------------------------
# MAIL
# ----------------------------
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------------
# AWS (opcional)
# ----------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ----------------------------
# FRONTEND
# ----------------------------
VITE_APP_NAME="${APP_NAME}"

# ----------------------------
# API - FACTURACION / AQPF / FEASY
# ----------------------------
AQPF_API_TOKEN=
AQPF_BASE_URL=https://apis.aqpfact.pe/api

FEASY_TOKEN=
FEASY_AUTH_MODE=bearer
FEASY_TIMEOUT=30

# ----------------------------
# N8N
# ----------------------------
N8N_ASSISTANT_URL=
N8N_ASSISTANT_TIMEOUT=25
N8N_ASSISTANT_TOKEN=

# ----------------------------
# ROBOT + CLOUDFLARE ACCESS
# ----------------------------
ROBOT_BASE_URL=
ROBOT_API_KEY=

CF_ACCESS_CLIENT_ID=
CF_ACCESS_CLIENT_SECRET=
